<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Holiday Thyme</title>
    <%= csrf_meta_tag %>
    <%# We dont' want jquery UI css on the calendar as it screws up the styling/ layout %>
    <% if params[:controller] != 'calendar' %>
      <%= stylesheet_link_tag "/javascripts/jquery-ui-1.8.12.south-street/css/south-street/jquery-ui-1.8.12.custom.css" %>
    <% end %>
    <%= stylesheet_link_tag "fullcalendar", "reveal", "application" %>
    <%= yield(:head) %>
  </head>
  <body class="<%= body_classes %>">
  <div class="topbar">
    <div class="topbar-inner">
      <div class="container">
        <%= link_to 'Holiday Thyme', root_path, :class => 'brand' %>
        <% if user_signed_in? %>
          <%= render_navigation %>
          <ul id="secondary-nav">
            <li><%= link_to 'My info', edit_user_registration_path %></li>
            <li><%= link_to 'Sign out', destroy_user_session_path %></li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <%= content_tag :h1, yield(:title) if show_title? %>
    <%- if show_title? -%>
      <h1><%= h yield(:title) %></h1>
    <%- end -%>

    <% if content_for?(:sidebar) %>
      <div class="sidebar"><%= yield(:sidebar) %></div>
    <% end %>

    <div class="main">
      <div id="flash">
        <%= render_flash_messages %>
      </div>
      <%= yield %>
    </div>
  </div>

  <div id="dialog-content">
    <%= yield :dialog %>
  </div>

  <div id="error_panel">
    <div id="closeButton">
    </div>
    <div id="messages">
    </div>
  </div>

  <%= javascript_include_tag 'jquery-1.5.2.min.js', 'rails', 'application', 'jquery.formatdate', 'jquery-ui-1.8.12.south-street/js/jquery-ui-1.8.12.custom.min', 'rails.validations', '/javascripts/fullcalendar.min.js' %>
  <%= yield(:javascripts) %>
</body>
</html>
