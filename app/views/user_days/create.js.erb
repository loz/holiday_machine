<% if @user_day.errors.any? -%>
  var error_html = '<%= escape_javascript(render_flash_messages) %>';
  var error_list = '<%= escape_javascript(show_errors_as_list(@vacation.errors)) %>';
  var full_error_html = $(error_html).append(error_list);
  $("#flash").html(full_error_html);
<% else -%>
  // Render the flash message
  $('#flash').html('<%= escape_javascript(render_flash_messages) %>');

  // Reset all the forms
  $('form.user_day').resetForm();

  // Update the users working days left
  var changed_row = $('tr#user_<%= escape_javascript(@user.id) %>').find('.working-days-left'),
      working_days_left = '<%= escape_javascript(@allowance.days_remaining) %>';
  changed_row.html(working_days_left);
<% end -%>
